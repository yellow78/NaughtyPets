<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shoproom" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/framegreen"
                android:gravity="right" >

                <TextView
                    android:id="@+id/textshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="65dp"
                    android:text="SHOP"
                    android:textColor="#F4B947"
                    android:textSize="35sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/point" />

                <TextView
                    android:id="@+id/textshoppoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="9999"
                    android:textColor="#F4B947"
                    android:textSize="35sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="50dp" >

            <ImageButton
                android:id="@+id/shopimageBtn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="shop30"
                android:scaleType="centerInside"
                android:src="@drawable/nt30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="50dp" >

            <ImageButton
                android:id="@+id/shopimageBtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="shop60"
                android:scaleType="centerInside"
                android:src="@drawable/nt60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="50dp" >

            <ImageButton
                android:id="@+id/shopimageBtn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="shop150"
                android:scaleType="centerInside"
                android:src="@drawable/nt150" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="50dp" >

            <ImageButton
                android:id="@+id/shopimageBtn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="shop300"
                android:scaleType="centerInside"
                android:src="@drawable/nt300" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/shopbackimageBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:onClick="shopbackbtn"
                    android:scaleType="centerInside"
                    android:src="@drawable/back" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>